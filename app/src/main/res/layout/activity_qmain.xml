<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="5dp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="5dp"
                android:textColor="#ce000000"
                android:textSize="20dp"
                android:text="Review your Booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
<View
    android:background="@color/yellow"
    android:layout_width="match_parent"
    android:layout_height="1.5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:src="@drawable/index"
            android:layout_gravity="center"
            android:id="@+id/image_profile"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tradition Restaurant  Bar"
            android:layout_gravity="center"
            android:id="@+id/tv_change"
            android:textSize="19sp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:progressTint="@color/yellow"
                android:stepSize="1"
                android:layout_gravity="center"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/radio_button1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
                android:background="@drawable/a"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="7dp"
                android:text="ambience"
                android:textAlignment="center"
                />
            <CheckBox
                android:layout_marginLeft="15dp"
                android:id="@+id/radio_button2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="7dp"
                android:text="staff behaviour"
                android:textAlignment="center"
                />


        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/radio_button3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="7dp"
                android:text="ambience"
                android:textAlignment="center"
                />
            <CheckBox
                android:layout_marginLeft="15dp"
                android:id="@+id/radio_button4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="7dp"
                android:text="staff behaviour"
                android:textAlignment="center"
                />


        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linereditreview"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/editextbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="@null"
                android:textSize="12dp"
                android:gravity="top"
                android:text="suresh yadav"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </LinearLayout>
<Button
    android:textColor="#FFFFFF"
    android:text="submit"
    android:layout_marginTop="10dp"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_gravity="center"
    android:background="@color/yellow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>